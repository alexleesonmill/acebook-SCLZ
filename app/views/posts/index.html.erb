  <% if current_user != nil %>
    <div class="button is-info is-rounded p-2 widening" style="text-align: center; border: 1px solid #51a7e0; border-radius: 20px">
    <%= link_to 'New Post', new_post_path, :class => "is-family-code is-size-4", :style => "color: #ffffff" %>
    </div>
  <% end %>
  <%= render 'shared/posts_cards' %>
