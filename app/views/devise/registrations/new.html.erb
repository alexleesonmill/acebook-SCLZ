
<div class="columns mt-3 mr-1 is-centered"><h2 class="is-size-3">Sign up</h2></div>
<div class="columns mt-3 is-centered">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div class="columns mt-1 ml-6 mb-0"><%= f.label :email %></div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

    <div class="field">
    <div class="columns mt-0 ml-6 mb-0"><%= f.label :name %></div>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> char min)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions ml-6 ">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>
